<!DOCTYPE html>
<html ng-app="moodApp">
<head>
  <title>SENSUS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> -->
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>

</head>
<body>

  <nav>
  <header ng-controller="HeaderController as header">
    <span>
      <h1>
        <!-- logo -->
        <span class="logo">S E N S U S</span>
        <br/>
        <!-- new mood post -->
        <a href class="headerlink"="#">POST YOUR MOOD</a> |
        <!-- see all mood posts -->
        <a href class="headerlink"="#">SEE YOUR MOODS</a> |
        <!-- D3 Mood Chart -->
        <a href class="headerlink"="#">MOOD CHART</a> |
        <!-- user page -->
        Welcome, <a href class="headerlink"="#">{{ header.current_user.email }}</a> </h1>
  </header>
  </nav>

  <%= yield %>

  <div ng-view></div>

  <%= javascript_include_tag 'angular', 'data-turbolinks-track' => true %>

</body>
</html>
