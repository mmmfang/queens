<!-- the factor form -->
<div ng-controller="FactorController as factor" ng-show="mood.happiness == 1 || mood.happiness == 2 || mood.happiness == 3">
<form ng-submit="factor.createFactor(blurb)">
  Why are you feeling upset?<br/>
  <input class="blurbbox"
         type="text"
         ng-model="factor.blurb"
         ng-maxlength="140"
         ng-value="factor.blurb">
  <input type="submit"
         value="SUBMIT YOUR MOOD">
</div>

<div ng-controller="FactorController as factor" ng-show="mood.happiness == 4 || mood.happiness == 5 || mood.happiness == 6">
