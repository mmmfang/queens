<div ng-controller="MoodController as mood" id = "showall">
<div id="emoji"
     ng-repeat="m in mood.current_user_moods | orderBy: '-created_at'"
     ng-style="m.happiness==1 && {'background-color':  '#99ffff'} ||
               m.happiness==2 && {'background-color':  '#99e6ff'} ||
               m.happiness==3 && {'background-color':  '#99ccff'} ||
               m.happiness==4 && {'background-color':  '#0066cc'} ||
               m.happiness==5 && {'background-color':  '#99b3ff'} ||
               m.happiness==6 && {'background-color':  '#9999ff'} ||
               m.happiness==7 && {'background-color':  '#b399ff'} ||
               m.happiness==8 && {'background-color':  '#ff9999'} ||
               m.happiness==9 && {'background-color':  '#e6ff99'} ||
               m.happiness==10 && {'background-color':  '#ccff99'} ||
               m.happiness==11 && {'background-color':  '#b3ff99'} ||
               m.happiness==12 && {'background-color':  '#99ff99'} ||
               m.happiness==13 && {'background-color':  '#ffcc99'} ||
               m.happiness==14 && {'background-color':  '#ffe699'} ||
               m.happiness==15 && {'background-color':  '#ff99ff'} ||
               m.happiness==16 && {'background-color':  '#ff99e5'} ||
               m.happiness==17 && {'background-color':  '#ff99cc'} ||
               m.happiness==18 && {'background-color':  '#ff99b3'} ||
               m.happiness==19 && {'background-color':  '#ffff99'}">


     <!-- POST DATE -->
     <span>Posted: {{m.created_at | date:'MM/dd/yyyy @ h:mma'}}</span>


     <!-- SAD EMOJIS -->
     <span ng-show="m.happiness==1"
           class="emojishow">
        <img src="images/sad1.png"/>
     </span>

     <span ng-show="m.happiness==2"
           class="emojishow">
        <img src="images/sad2.png"/>
     </span>

     <span ng-show="m.happiness==3"
           class="emojishow">
        <img src="images/sad3.png"/>
     </span>

     <span ng-show="m.happiness==4"
           class="emojishow">
        <img src="images/sad4.png"/>
     </span>

     <span ng-show="m.happiness==5"
           class="emojishow">
        <img src="images/sad5.png"/>
     </span>

     <span ng-show="m.happiness==6"
           class="emojishow">
        <img src="images/sad6.png"/>
     </span>

     <!-- ANGRY EMOJIS -->
     <span ng-show="m.happiness==7"
           class="emojishow">
        <img src="images/angry1.png"/>
     </span>

     <span ng-show="m.happiness==8"
           class="emojishow">
        <img src="images/angry2.png"/>
     </span>

     <!-- NEUTRAL EMOJIS -->
     <span ng-show="m.happiness==9"
           class="emojishow">
        <img src="images/neutral1.png"/>
     </span>

     <span ng-show="m.happiness==10"
           class="emojishow">
        <img src="images/neutral2.png"/>
     </span>

     <span ng-show="m.happiness==11"
           class="emojishow">
        <img src="images/neutral3.png"/>
     </span>

     <span ng-show="m.happiness==12"
           class="emojishow">
        <img src="images/neutral4.png"/>
     </span>

     <!-- HAPPY EMOTIONS -->
     <span ng-show="m.happiness==13"
           class="emojishow">
        <img src="images/happy1.png"/>
     </span>

     <span ng-show="m.happiness==14"
           class="emojishow">
        <img src="images/happy3.png"/>
     </span>

     <span ng-show="m.happiness==15"
           class="emojishow">
        <img src="images/happy4.png"/>
     </span>

     <span ng-show="m.happiness==16"
           class="emojishow">
        <img src="images/happy5.png"/>
     </span>

     <span ng-show="m.happiness==17"
           class="emojishow">
        <img src="images/happy6.png"/>
     </span>

     <span ng-show="m.happiness==18"
           class="emojishow">
        <img src="images/happy7.png"/>
     </span>

     <span ng-show="m.happiness==19"
           class="emojishow">
        <img src="images/happy8.png"/>
     </span>


      <!-- FACTORS -->

    <span ng-repeat="factor in m.factors">
        <h4>"{{factor.blurb}}"</h4>
    </span>
    <button type="button" id = "delete" ng-click="mood.deleteMood(m)">DELETE</button>
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <br/>
<br/>
</div>
</div>
